<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.whyx.dao.task.TaskMapper">
    <select id="getAllList" resultType="Task" parameterType="Task">
        <!--查询所有信息-->
        SELECT t.*,
        (select name from penson p where p.id = t.executeid) ename,
        (select name from penson p where p.id = t.employeeid) pname
        FROM `task` t
        <where>
            <if test="employeeid!=1">
                and t.employeeid = #{employeeid}
            </if>
            <if test="matter!=null">
                and t.matter like concat('%',#{matter},'%')
            </if>
        </where>
        order by id desc
    </select>
    <!--修改书信息-->
    <update id="update">
      UPDATE task
        <set>
            <if test="matter!=null">
                matter=#{matter},
            </if>
            <if test="starttime!=null">
                starttime=#{starttime},
            </if>
            <if test="creationtime!=null">
                creationtime=#{creationtime},
            </if>
            <if test="revisiontime!=null">
                revisiontime=#{revisiontime},
            </if>
            <if test="state!=null">
                state=#{state},
            </if>
            <if test="employeeid!=null">
                employeeid=#{employeeid},
            </if>
            <if test="executeid!=null">
                executeid=#{executeid}
            </if>
        </set>
      WHERE id=#{id}
    </update>
    <select id="selById" resultType="Task">
    select * from task where id = #{id}
    </select>
    <!--删除-->
    <delete id="del">
          DELETE FROM `task`WHERE id=#{id}
    </delete>
    <!--添加信息-->
    <insert id="add">
        insert into task(matter,starttime,creationtime,revisiontime,state,employeeid,executeid)
        VALUES(#{matter},#{starttime},#{creationtime},#{revisiontime},#{state},#{employeeid},#{executeid})
    </insert>
</mapper>